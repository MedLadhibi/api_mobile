
{% extends 'base.html.twig' %}

{% block content %}


    <section class="sec-padding volunteer-profile">
        <div class="container">
            <div class="row">
                {% for migrant in migrant %}
                <div class="col-md-4 col-sm-5">
                    <img class="profile-img" src="{{ asset('uploads/images/'~migrant.image) }}" height="350" width="300" >
                </div>
                <div class="col-md-8 col-sm-7 single-team-member">
                        <h3>   {{ migrant.nom }} </h3>
                    {% for ref in ref %}
                        <span>{{ ref.nom }} </span>
                    {% endfor %}

                    <ul class="infos">
                            <li><span>Nom & Prenom :</span> <span>{{ migrant.prenom }}</span></li>
                            <li><span>Age :</span> <span>{{ migrant.age }}</span></li>
                            <li><span>Tel :</span> <span>{{ migrant.tel }}</span></li>
                            <li><span>email :</span><span>{{ migrant.email }}</span></li>
                            <li><span>Langue :</span><span>{{ migrant.langue }}</span></li>
                            <li><span>Competence :</span> <span>{{ migrant.competence }}</span></li>
                        </ul>
                        <ul class="social">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                </div>
                <div class="col-md-4 col-sm-12 sidebar-inner pull-right pull-sm-none">
                    <div class="side-bar-widget">
                        <div class="single-sidebar-widget search">
                            <form action="#">
                                <a class="thm-btn btn-xs" onclick="window.location.href='{{ path('camp_update_migrant',{'id':migrant.id}) }}'">MODIFIER PROFIL <i class="fa fa-chevron-circle-right"></i></a>
                            </form>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}